{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto",
        "singleQuote": true,
        "no-unused-vars": "warn"
      }
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "quotes": ["error", "single", { "avoidEscape": true }]
  }
}
